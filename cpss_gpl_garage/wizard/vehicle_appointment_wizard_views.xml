<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire du wizard -->
    <record id="view_vehicle_appointment_wizard_form" model="ir.ui.view">
        <field name="name">vehicle.appointment.wizard.form</field>
        <field name="model">vehicle.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Nouveau rendez-vous v√©hicule">
                <div class="alert alert-info" role="alert">
                    <h4><i class="fa fa-calendar-plus"/> Cr√©ation d'un nouveau rendez-vous</h4>
                    <p>Configurez les d√©tails du rendez-vous pour votre v√©hicule GPL.</p>
                </div>

                <group>
                    <group string="üìÖ Rendez-vous">
                        <field name="appointment_date" widget="datetime"/>
                        <field name="estimated_duration" widget="float_time"/>
                    </group>
                    <group string="üöó V√©hicule">
                        <field name="vehicle_choice" widget="radio"/>
                        <field name="vehicle_count" invisible="1"/>
                        <div class="alert alert-warning" role="alert"
                             invisible="vehicle_count > 0 or vehicle_choice == 'new'">
                            <i class="fa fa-exclamation-triangle"/>
                            Aucun v√©hicule GPL existant. Un nouveau v√©hicule sera cr√©√©.
                        </div>
                    </group>
                </group>

                <group invisible="vehicle_choice == 'new'">
                    <group string="üîç S√©lection du v√©hicule">
                        <field name="vehicle_id"
                               options="{'no_create': True, 'no_edit': True}"
                               required="vehicle_choice == 'existing'"/>
                    </group>
                </group>

                <group>
                    <group string="üîß Service">
                        <field name="service_type"/>
                        <field name="technician_ids" widget="many2many_tags"/>
                    </group>
                    <group string="üìù Informations">
                        <field name="notes" nolabel="1"
                               placeholder="Notes sur l'intervention, pi√®ces n√©cessaires, etc."/>
                    </group>
                </group>

                <footer>
                    <button string="Cr√©er le rendez-vous"
                            name="action_create_appointment"
                            type="object"
                            class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Annuler"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action du wizard -->
    <record id="action_vehicle_appointment_wizard" model="ir.actions.act_window">
        <field name="name">Nouveau rendez-vous</field>
        <field name="res_model">vehicle.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_vehicle_appointment_wizard_form"/>
    </record>
</odoo>
