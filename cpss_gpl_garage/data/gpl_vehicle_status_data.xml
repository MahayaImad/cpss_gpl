<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Statuts des véhicules GPL -->
        <record id="vehicle_status_nouveau" model="gpl.vehicle.status">
            <field name="name">🆕 Nouveau</field>
            <field name="sequence">10</field>
            <field name="color">7</field>
            <field name="description">Véhicule nouvellement enregistré</field>
        </record>

        <record id="vehicle_status_en_cours" model="gpl.vehicle.status">
            <field name="name">⚙️ En cours</field>
            <field name="sequence">20</field>
            <field name="color">1</field>
            <field name="description">Intervention en cours</field>
        </record>

        <record id="vehicle_status_termine" model="gpl.vehicle.status">
            <field name="name">🎉 Terminé</field>
            <field name="sequence">30</field>
            <field name="color">5</field>
            <field name="is_done" eval="True"/>
            <field name="description">Intervention terminée avec succès</field>
        </record>

        <record id="vehicle_status_annule" model="gpl.vehicle.status">
            <field name="name">❌ Annulé</field>
            <field name="sequence">100</field>
            <field name="color">0</field>
            <field name="fold" eval="True"/>
            <field name="description">Intervention annulée</field>
        </record>
    </data>
</odoo>
