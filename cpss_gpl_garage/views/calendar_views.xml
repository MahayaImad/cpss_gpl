<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue calendrier mensuel - APPOINTMENTS -->
    <record id="view_gpl_vehicle_calendar_month" model="ir.ui.view">
        <field name="name">gpl.appointment.calendar.month</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Planning Atelier GPL"
                     date_start="appointment_date"
                     color="service_type"
                     date_delay="estimated_duration"
                     event_open_popup="true"
                     quick_create="false"
                     mode="month">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="client_id"/>
                <field name="appointment_date"/>
                <field name="service_type"/>
                <field name="state"/>
                <field name="estimated_duration"/>
                <field name="assigned_technician_ids" widget="many2many_tags"/>
            </calendar>
        </field>
    </record>

    <!-- Vue calendrier hebdomadaire - APPOINTMENTS -->
    <record id="view_gpl_vehicle_calendar_week" model="ir.ui.view">
        <field name="name">gpl.appointment.calendar.week</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Planning Hebdomadaire"
                     date_start="appointment_date"
                     date_delay="estimated_duration"
                     color="service_type"
                     mode="week"
                     event_open_popup="true"
                     quick_create="false">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="client_id"/>
                <field name="service_type"/>
                <field name="appointment_date"/>
                <field name="state"/>
                <field name="estimated_duration"/>
                <field name="assigned_technician_ids" widget="many2many_tags"/>
            </calendar>
        </field>
    </record>

    <!-- Vue calendrier quotidien - APPOINTMENTS -->
    <record id="view_gpl_vehicle_calendar_day" model="ir.ui.view">
        <field name="name">gpl.appointment.calendar.day</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Planning Quotidien"
                     date_start="appointment_date"
                     date_delay="estimated_duration"
                     color="service_type"
                     mode="day"
                     event_open_popup="true"
                     quick_create="false">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="client_id"/>
                <field name="service_type"/>
                <field name="appointment_date"/>
                <field name="state"/>
                <field name="estimated_duration"/>
                <field name="assigned_technician_ids" widget="many2many_tags"/>
            </calendar>
        </field>
    </record>

    <!-- Actions calendrier - APPOINTMENTS -->
    <record id="action_gpl_vehicle_calendar_month" model="ir.actions.act_window">
        <field name="name">ðŸ“… Planning Mensuel</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gpl_vehicle_calendar_month"/>
        <field name="domain">[('state', 'in', ['scheduled', 'confirmed', 'in_progress'])]</field>
        <field name="context">{'calendar_default_mode': 'month'}</field>
    </record>

    <record id="action_gpl_vehicle_calendar_week" model="ir.actions.act_window">
        <field name="name">ðŸ“… Planning Hebdomadaire</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gpl_vehicle_calendar_week"/>
        <field name="domain">[('state', 'in', ['scheduled', 'confirmed', 'in_progress'])]</field>
        <field name="context">{'calendar_default_mode': 'week'}</field>
    </record>

    <record id="action_gpl_vehicle_calendar_day" model="ir.actions.act_window">
        <field name="name">ðŸ“… Planning Quotidien</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gpl_vehicle_calendar_day"/>
