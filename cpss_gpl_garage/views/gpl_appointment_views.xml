<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_gpl_appointment_tree" model="ir.ui.view">
        <field name="name">gpl.appointment.tree</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <tree string="Rendez-vous" decoration-danger="appointment_status == 'overdue'"
                  decoration-info="state == 'in_progress'"
                  decoration-success="state == 'completed'"
                  decoration-muted="state in ['cancelled', 'no_show']">
                <field name="name"/>
                <field name="appointment_date"/>
                <field name="license_plate"/>
                <field name="client_id"/>
                <field name="service_type"/>
                <field name="technician_names"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'scheduled'"
                       decoration-primary="state == 'confirmed'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state == 'completed'"
                       decoration-danger="state in ['cancelled', 'no_show']"/>
                <field name="appointment_status" column_invisible="True"/>
                <field name="operation_reference"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gpl_appointment_form" model="ir.ui.view">
        <field name="name">gpl.appointment.form</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <form string="Rendez-vous">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object"
                            class="btn-primary" invisible="state != 'scheduled'"/>
                    <button name="action_start" string="D√©marrer" type="object"
                            class="btn-success" invisible="state not in ['scheduled', 'confirmed']"/>
                    <button name="action_complete" string="Terminer" type="object"
                            class="btn-primary" invisible="state != 'in_progress'"/>
                    <button name="action_reschedule" string="Reprogrammer" type="object"
                            class="btn-warning" invisible="state in ['completed', 'cancelled', 'no_show']"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            class="btn-danger" invisible="state in ['completed', 'cancelled', 'no_show']"/>
                    <button name="action_mark_no_show" string="Client absent" type="object"
                            class="btn-secondary" invisible="state not in ['scheduled', 'confirmed']"/>
                    <button name="action_view_operation" string="Voir l'op√©ration" type="object"
                            class="btn-info" invisible="not operation_type"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="scheduled,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_operation" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="not operation_type">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="operation_reference"/></span>
                                <span class="o_stat_text">Op√©ration</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Annul√©" bg_color="bg-danger"
                            invisible="state != 'cancelled'"/>
                    <widget name="web_ribbon" title="Client absent" bg_color="bg-warning"
                            invisible="state != 'no_show'"/>
                    <widget name="web_ribbon" title="Termin√©" bg_color="bg-success"
                            invisible="state != 'completed'"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="V√©hicule et Client">
                            <field name="vehicle_id" options="{'no_create': True}"/>
                            <field name="license_plate" readonly="1"/>
                            <field name="client_id" readonly="1"/>
                        </group>
                        <group string="Rendez-vous">
                            <field name="appointment_date"/>
                            <field name="service_type"/>
                            <field name="estimated_duration" widget="float_time"/>
                        </group>
                    </group>

                    <group>
                        <group string="Assignment">
                            <field name="assigned_technician_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create': True}"/>
                        </group>
                        <group string="√âtat">
                            <field name="appointment_status" readonly="1"/>
                            <field name="is_appointment_today" readonly="1"/>
                            <field name="is_appointment_tomorrow" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="notes" placeholder="Notes sur le rendez-vous..."/>
                    </group>

                    <group string="Annulation" invisible="state != 'cancelled'">
                        <field name="cancellation_reason" readonly="state != 'cancelled'"/>
                    </group>

                    <field name="operation_type" invisible="1"/>
                    <field name="operation_id" invisible="1"/>
                    <field name="color" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_gpl_appointment_calendar" model="ir.ui.view">
        <field name="name">gpl.appointment.calendar</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Planning Rendez-vous"
                     date_start="appointment_date"
                     date_delay="estimated_duration"
                     color="service_type"
                     event_open_popup="true"
                     quick_create="false"
                     mode="month">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="client_id"/>
                <field name="service_type"/>
                <field name="state"/>
                <field name="assigned_technician_ids" widget="many2many_tags"/>
            </calendar>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_gpl_appointment_kanban" model="ir.ui.view">
        <field name="name">gpl.appointment.kanban</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="state">
                <field name="name"/>
                <field name="appointment_date"/>
                <field name="license_plate"/>
                <field name="client_id"/>
                <field name="service_type"/>
                <field name="state"/>
                <field name="color"/>
                <field name="appointment_status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Modifier</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Supprimer</a></t>
                                    <a name="action_view_operation" type="object" class="dropdown-item"
                                       t-if="record.operation_reference and record.operation_reference.raw_value">Voir l'op√©ration</a>
                                </div>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="license_plate"/>
                                        </strong>
                                        <br/>
                                        <small><field name="client_id"/></small>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="mb-1">
                                        <i class="fa fa-calendar me-1" title="Date RDV"/>
                                        <field name="appointment_date" widget="date"/>
                                    </div>
                                    <div class="mb-1">
                                        <i class="fa fa-wrench me-1" title="Service"/>
                                        <field name="service_type"/>
                                    </div>
                                    <div t-if="record.assigned_technician_ids and record.assigned_technician_ids.raw_value and record.assigned_technician_ids.raw_value.length">
                                        <i class="fa fa-user me-1" title="Techniciens"/>
                                        <field name="assigned_technician_ids" widget="many2many_tags"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt8">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="name"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.appointment_status and record.appointment_status.raw_value == 'overdue'"
                                              class="badge badge-danger">En retard</span>
                                        <span t-if="record.appointment_status and record.appointment_status.raw_value == 'today'"
                                              class="badge badge-warning">Aujourd'hui</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_gpl_appointment_search" model="ir.ui.view">
        <field name="name">gpl.appointment.search</field>
        <field name="model">gpl.appointment</field>
        <field name="arch" type="xml">
            <search string="Rechercher Rendez-vous">
                <field name="name" string="R√©f√©rence"/>
                <field name="vehicle_id" string="V√©hicule"/>
                <field name="license_plate" string="Plaque"/>
                <field name="client_id" string="Client"/>
                <field name="service_type" string="Service"/>
                <field name="assigned_technician_ids" string="Techniciens"/>

                <separator/>

                <!-- Filtres rapides -->
                <filter string="üìÖ Aujourd'hui" name="today"
                        domain="[('appointment_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                ('appointment_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="üìÖ Cette semaine" name="this_week"
                        domain="[('appointment_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d 00:00:00')),
                                ('appointment_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="üìÖ Ce mois" name="this_month"
                        domain="[('appointment_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d 00:00:00')),
                                ('appointment_date', '&lt;=', ((context_today().replace(day=28) + datetime.timedelta(days=4)).replace(day=1) - datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:59:59'))]"/>

                <separator/>

                <!-- √âtats -->
                <filter string="Programm√©" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="Confirm√©" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="En cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Termin√©" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Annul√©" name="cancelled" domain="[('state', '=', 'cancelled')]"/>

                <separator/>

                <!-- Statuts -->
                <filter string="üî¥ En retard" name="overdue" domain="[('appointment_status', '=', 'overdue')]"/>
                <filter string="üü° Aujourd'hui" name="status_today" domain="[('appointment_status', '=', 'today')]"/>

                <separator/>

                <!-- Service types -->
                <filter string="Installation" name="installation" domain="[('service_type', '=', 'installation')]"/>
                <filter string="R√©paration" name="repair" domain="[('service_type', '=', 'repair')]"/>
                <filter string="Contr√¥le" name="inspection" domain="[('service_type', '=', 'inspection')]"/>
                <filter string="Test" name="testing" domain="[('service_type', '=', 'testing')]"/>

                <separator/>

                <!-- Groupements -->
                <group expand="0" string="Grouper par">
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Service" name="group_service" context="{'group_by': 'service_type'}"/>
                    <filter string="V√©hicule" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'appointment_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_gpl_appointment" model="ir.actions.act_window">
        <field name="name">Rendez-vous</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_gpl_appointment_kanban')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_gpl_appointment_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_gpl_appointment_form')}),
            (0, 0, {'view_mode': 'calendar', 'view_id': ref('view_gpl_appointment_calendar')})
        ]"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau rendez-vous
            </p>
            <p>
                G√©rez tous vos rendez-vous GPL : installations, r√©parations, contr√¥les et tests.
            </p>
        </field>
    </record>

    <!-- Calendar Actions -->
    <record id="action_gpl_appointment_calendar_month" model="ir.actions.act_window">
        <field name="name">Planning Mensuel</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gpl_appointment_calendar"/>
        <field name="context">{'calendar_default_mode': 'month'}</field>
    </record>

    <record id="action_gpl_appointment_calendar_week" model="ir.actions.act_window">
        <field name="name">Planning Hebdomadaire</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gpl_appointment_calendar"/>
        <field name="context">{'calendar_default_mode': 'week'}</field>
    </record>

    <record id="action_gpl_appointment_calendar_day" model="ir.actions.act_window">
        <field name="name">Planning Quotidien</field>
        <field name="res_model">gpl.appointment</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gpl_appointment_calendar"/>
        <field name="context">{'calendar_default_mode': 'day'}</field>
    </record>

</odoo>
