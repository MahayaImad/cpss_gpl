<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="gpl_auto_workflow_widget">
        <div class="o_field_widget o_field_badge">
            <span class="badge badge-pill">
                <t t-if="record.auto_workflow_state.raw_value == 'draft'">
                    <span class="badge-secondary">Brouillon</span>
                </t>
                <t t-elif="record.auto_workflow_state.raw_value == 'sale_created'">
                    <span class="badge-info">Commande créée</span>
                </t>
                <t t-elif="record.auto_workflow_state.raw_value == 'sale_confirmed'">
                    <span class="badge-primary">Commande confirmée</span>
                </t>
                <t t-elif="record.auto_workflow_state.raw_value == 'delivered'">
                    <span class="badge-warning">Livré</span>
                </t>
                <t t-elif="record.auto_workflow_state.raw_value == 'invoiced'">
                    <span class="badge-success">Facturé</span>
                </t>
                <t t-elif="record.auto_workflow_state.raw_value == 'done'">
                    <span class="badge-dark">Terminé</span>
                </t>
            </span>
        </div>
    </template>

    <!-- Vue Formulaire Simplifiée pour Installation -->
    <record id="view_gpl_service_installation_form_simple" model="ir.ui.view">
        <field name="name">gpl.service.installation.form.simple</field>
        <field name="model">gpl.service.installation</field>
        <field name="arch" type="xml">
            <form string="Installation GPL">
                <header>
                    <button name="action_start" string="Démarrer" type="object"
                            class="btn-primary"
                            invisible="state not in ['draft', 'planned']"/>
                    <button name="action_done" string="Terminer" type="object"
                            class="btn-success" invisible="state not in ['in_progress']"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            invisible="state not in ['draft', 'planned', 'in_progress']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,planned,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informations générales">
                            <field name="vehicle_id" options="{'no_create': True}"/>
                            <field name="client_id"/>
                            <field name="date_start"/>
                            <field name="date_planned"/>
                        </group>
                        <group string="Exécution">
                            <field name="sale_order_id" readonly="1"
                                   invisible = "not sale_order_id"/>
                            <field name="auto_workflow_state" widget="badge" readonly="1"/>
                            <field name="technician_ids" widget="many2many_tags"/>
                            <field name="reservoir_lot_id"
                                   domain="[('product_id.is_gpl_reservoir', '=', True)]"
                                   options="{'no_create': True}"/>
                            <field name="date_end" readonly="1"/>
                            <field name="total_amount_ttc" widget="monetary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Produits utilisés">
                            <field name="installation_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="product_tracking" invisible="1" column_invisible="True"/>
                                    <field name="lot_id"
                                           invisible="product_tracking == 'none'"
                                           required="product_tracking in ['lot', 'serial']"/>
                                    <field name="quantity"
                                       readonly="product_tracking == 'serial'"
                                       help="Quantité fixe à 1 pour les réservoirs"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="tax_rate"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="subtotal_ttc" widget="monetary" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Ajouter des notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Liste Simplifiée -->
    <record id="view_gpl_service_installation_tree_simple" model="ir.ui.view">
        <field name="name">gpl.service.installation.tree.simple</field>
        <field name="model">gpl.service.installation</field>
        <field name="arch" type="xml">
            <tree string="Installations GPL" decoration-success="state=='done'"
                  decoration-info="state=='in_progress'" decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
                <field name="date_start"/>
                <field name="technician_ids" widget="many2many_tags"/>
                <field name="reservoir_lot_id" optional="show"/>
                <field name="total_amount_ttc" widget="monetary" sum="Total"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'in_progress'"
                       decoration-warning="state == 'planned'"
                       decoration-muted="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban Simplifiée -->
    <record id="view_gpl_service_installation_kanban_simple" model="ir.ui.view">
        <field name="name">gpl.service.installation.kanban.modern</field>
        <field name="model">gpl.service.installation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state"
                    groups_order="draft,planned,in_progress,done,cancel"
                    class="o_kanban_small_column"
                    quick_create="false"
                    kanban_archivable="false"
                    group_edit="false"
                    sample="1"
                    create="true"
                    group_create="false"
                    groups_draggable="true">

                <!-- Champs nécessaires -->
                <field name="state"/>
                <field name="id"/>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
                <field name="date_start"/>
                <field name="technician_ids"/>
                <field name="reservoir_lot_id"/>
                <field name="total_amount_ttc"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>

                <!-- Progressbar -->
                <progressbar field="state"
                            colors='{"draft": "muted", "planned": "info", "in_progress": "warning", "done": "success", "cancel": "danger"}'
                            sum_field="total_amount_ttc"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card"
                             t-attf-style="border-left: 5px solid #{
                                record.state.raw_value == 'done' ? '#28a745' :
                                record.state.raw_value == 'in_progress' ? '#ffc107' :
                                record.state.raw_value == 'planned' ? '#17a2b8' :
                                record.state.raw_value == 'cancel' ? '#dc3545' : '#6c757d'};">

                            <!-- Menu dropdown -->
                            <div class="o_dropdown_kanban dropdown position-absolute top-0 end-0">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" title="Menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Modifier</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Supprimer</a>
                                    <div role="separator" class="dropdown-divider"/>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="oe_kanban_content p-2">
                                <!-- Header avec icône -->
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-2">
                                        <i class="fa fa-cogs fa-2x text-success" title="Installation GPL"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="text-muted">
                                            <i class="fa fa-calendar me-1"/>
                                            <field name="date_start"/>
                                        </small>
                                    </div>
                                </div>

                                <!-- Informations principales -->
                                <div class="d-flex flex-column mb-2">
                                    <!-- Véhicule -->
                                    <div class="mb-1" t-if="record.vehicle_id.raw_value">
                                        <i class="fa fa-car text-primary me-2"/>
                                        <strong><field name="vehicle_id"/></strong>
                                    </div>

                                    <!-- Client
                                    <div class="mb-1" t-if="record.client_id.raw_value">
                                        <i class="fa fa-user text-info me-2"/>
                                        <span><field name="client_id"/></span>
                                    </div>-->

                                    <!-- Réservoir
                                    <div class="mb-1" t-if="record.reservoir_lot_id.raw_value">
                                        <i class="fa fa-flask text-warning me-2"/>
                                        <span><field name="reservoir_lot_id"/></span>
                                    </div>-->
                                </div>

                                <!-- Status Badge
                                <div class="mb-2">
                                    <span t-attf-class="badge rounded-pill text-white #{
                                        record.state.raw_value == 'done' ? 'bg-success' :
                                        record.state.raw_value == 'in_progress' ? 'bg-warning' :
                                        record.state.raw_value == 'planned' ? 'bg-info' :
                                        record.state.raw_value == 'cancel' ? 'bg-danger' : 'bg-secondary'}">
                                        <i class="fa fa-circle me-1"/>
                                        <field name="state"/>
                                    </span>
                                </div>-->

                                <!-- Footer avec montant et techniciens -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <div t-if="record.total_amount_ttc.raw_value">
                                        <strong class="text-success">
                                            <field name="total_amount_ttc" widget="monetary"/>
                                        </strong>
                                    </div>
                                    <div t-if="record.technician_ids.raw_value">
                                        <span class="badge bg-light text-dark">
                                            <i class="fa fa-users me-1"/>
                                            <field name="technician_ids" widget="many2many_tags"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Vue Calendrier -->
    <record id="view_gpl_service_installation_calendar" model="ir.ui.view">
        <field name="name">gpl.service.installation.calendar</field>
        <field name="model">gpl.service.installation</field>
        <field name="arch" type="xml">
            <calendar string="Installations GPL" date_start="date_planned"
                      date_stop="date_planned" color="state" mode="month">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
            </calendar>
        </field>
    </record>

    <!-- Vue de recherche -->
    <record id="view_gpl_service_installation_search_simple" model="ir.ui.view">
        <field name="name">gpl.service.installation.search.simple</field>
        <field name="model">gpl.service.installation</field>
        <field name="arch" type="xml">
            <search string="Recherche d'installations">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
                <filter string="En cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Terminées" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Cette semaine" name="this_week"
                        domain="[('date_start', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('date_start', '&lt;', (context_today() + datetime.timedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois" name="this_month"
                        domain="[('date_start', '&gt;=', (datetime.datetime.now()).strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_by_state" string="État" context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'date_start:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gpl_service_installation_simple" model="ir.actions.act_window">
    <field name="name">Installations GPL</field>
    <field name="res_model">gpl.service.installation</field>
    <field name="view_mode">kanban,tree,form,calendar</field>
    <field name="view_ids" eval="[
        (5, 0, 0),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_gpl_service_installation_kanban_simple')}),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_gpl_service_installation_tree_simple')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_gpl_service_installation_form_simple')}),
        (0, 0, {'view_mode': 'calendar', 'view_id': ref('view_gpl_service_installation_calendar')})
    ]"/>
    <field name="context">{
        'group_by': ['state'],
        'force_all_groups': True,
        'kanban_states_visibility': 'visible',
        'search_default_this_month': 1
    }</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Créer une nouvelle installation GPL
        </p>
        <p>
            Gérez vos installations de systèmes GPL sur véhicules.
        </p>
    </field>
</record>

</odoo>
