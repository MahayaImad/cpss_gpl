<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Formulaire pour Contrôle Technique -->
    <record id="view_gpl_inspection_form" model="ir.ui.view">
        <field name="name">gpl.inspection.form</field>
        <field name="model">gpl.inspection</field>
        <field name="arch" type="xml">
            <form string="Contrôle Technique GPL">
                <header>
                    <button name="action_start" string="Démarrer" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_done" string="Valider" type="object"
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Annuler" type="object"
                           invisible="state not in ['draft', 'planned', 'in_progress']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Validé" bg_color="bg-success"
                            invisible="result != 'pass'"/>
                    <widget name="web_ribbon" title="Refusé" bg_color="bg-danger"
                            invisible="result != 'fail'"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informations générales">
                            <field name="vehicle_id" options="{'no_create': True}"/>
                            <field name="client_id"/>
                            <field name="inspection_type"/>
                            <field name="date_start"/>
                        </group>
                        <group string="Validation">
                            <field name="technician_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create': True}"/>
                            <field name="result" readonly="1"/>
                            <field name="certificate_number"
                                   invisible="result != 'pass'"/>
                            <field name="date_next_inspection"
                                   invisible="result != 'pass'"/>
                        </group>
                    </group>

                    <separator string="Points de contrôle"/>
                    <group col="4">
                        <field name="check_reservoir" widget="radio"/>
                        <field name="check_piping" widget="radio"/>
                        <field name="check_injectors" widget="radio"/>
                        <field name="check_electronics" widget="radio"/>
                        <field name="check_pressure" widget="radio"/>
                    </group>

                    <notebook>
                        <page string="Observations">
                            <field name="observations" placeholder="Commentaires sur le contrôle..."/>
                        </page>
                        <page string="Recommandations">
                            <field name="recommendations" placeholder="Recommandations pour le client..."/>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Ajouter des notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Liste -->
    <record id="view_gpl_inspection_tree" model="ir.ui.view">
        <field name="name">gpl.inspection.tree</field>
        <field name="model">gpl.inspection</field>
        <field name="arch" type="xml">
            <tree string="Contrôles Techniques" decoration-success="result=='pass'"
                  decoration-danger="result=='fail'" decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
                <field name="inspection_type"/>
                <field name="date_start"/>
                <field name="technician_ids"/>
                <field name="result" widget="badge"
                       decoration-success="result == 'pass'"
                       decoration-danger="result == 'fail'"
                       decoration-warning="result == 'pending'"/>
                <field name="certificate_number" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'in_progress'"
                       decoration-muted="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_gpl_inspection_kanban" model="ir.ui.view">
        <field name="name">gpl.inspection.kanban</field>
        <field name="model">gpl.inspection</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state"
                    class="o_kanban_small_column"
                    quick_create="false"
                    sample="1">

                <!-- Champs nécessaires -->
                <field name="state"/>
                <field name="result"/>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
                <field name="date_start"/>
                <field name="inspection_type"/>
                <field name="certificate_number"/>
                <field name="technician_ids"/>

                <!-- Progressbar -->
                <progressbar field="state"
                            colors='{"draft": "muted", "planned": "info", "in_progress": "warning", "done": "success", "cancel": "danger"}' />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card"
                             t-attf-style="border-left: 5px solid
                                #{record.result.raw_value == 'pass' ? '#28a745' : ''}
                                #{record.result.raw_value == 'fail' ? '#dc3545' : '#6c757d'};">

                            <!-- Menu dropdown -->
                            <div class="o_dropdown_kanban dropdown position-absolute top-0 end-0">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" title="Menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Modifier</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Supprimer</a>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="oe_kanban_content p-2">
                                <!-- Header avec icône -->
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-2">
                                        <i class="fa fa-search fa-2x text-primary" title="Inspection GPL"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="text-muted">
                                            <field name="inspection_type"/>
                                        </small>
                                    </div>
                                </div>

                                <!-- Badge résultat -->
                                <div class="mb-1" t-if="record.result.raw_value != 'pending'">
                                    <span t-attf-class="badge text-white
                                        #{record.result.raw_value == 'pass' ? 'bg-success' : ''}
                                        #{record.result.raw_value == 'fail' ? 'bg-danger' : 'bg-warning'}">
                                        <i t-attf-class="fa
                                            #{record.result.raw_value == 'pass' ? 'fa-check' :''}
                                            #{record.result.raw_value == 'fail' ? 'fa-times' : 'fa-clock-o'} me-1"/>
                                        <span t-if="record.result.raw_value == 'pass'">CONFORME</span>
                                        <span t-elif="record.result.raw_value == 'fail'">NON CONFORME</span>
                                        <span t-else="">EN ATTENTE</span>
                                    </span>
                                </div>

                                <!-- Informations principales -->
                                <div class="d-flex flex-column mb-1">
                                    <!-- Véhicule -->
                                    <div class="mb-1" t-if="record.vehicle_id.raw_value">
                                        <i class="fa fa-car text-primary me-2"/>
                                        <strong><field name="vehicle_id"/></strong>
                                    </div>

                                    <!-- Client
                                    <div class="mb-1" t-if="record.client_id.raw_value">
                                        <i class="fa fa-user text-info me-2"/>
                                        <span><field name="client_id"/></span>
                                    </div>-->

                                    <!-- Certificat
                                    <div class="mb-1" t-if="record.certificate_number.raw_value">
                                        <i class="fa fa-certificate text-success me-2"/>
                                        <small><field name="certificate_number"/></small>
                                    </div>-->
                                </div>

                                <!-- Footer -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <div t-if="record.date_start.raw_value">
                                        <small class="text-muted">
                                            <i class="fa fa-calendar me-1"/>
                                            <field name="date_start"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue de recherche -->
    <record id="view_gpl_inspection_search" model="ir.ui.view">
        <field name="name">gpl.inspection.search</field>
        <field name="model">gpl.inspection</field>
        <field name="arch" type="xml">
            <search string="Recherche de contrôles">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="client_id"/>
                <field name="technician_ids"/>
                <field name="certificate_number"/>
                <filter string="Validés" name="passed" domain="[('result', '=', 'pass')]"/>
                <filter string="Refusés" name="failed" domain="[('result', '=', 'fail')]"/>
                <filter string="En attente" name="pending" domain="[('result', '=', 'pending')]"/>
                <separator/>
                <filter string="En cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Terminés" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Ce mois" name="this_month"
                        domain="[('date_start', '&gt;=', (datetime.datetime.now()).strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_by_state" string="État" context="{'group_by': 'state'}"/>
                    <filter name="group_by_result" string="Résultat" context="{'group_by': 'result'}"/>
                    <filter name="group_by_type" string="Type" context="{'group_by': 'inspection_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gpl_inspection" model="ir.actions.act_window">
        <field name="name">Contrôles Techniques</field>
        <field name="res_model">gpl.inspection</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau contrôle technique
            </p>
            <p>
                Gérez les contrôles techniques et validations des installations GPL.
            </p>
        </field>
    </record>
</odoo>
