<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action de rapport pour le bordereau d'envoi -->
    <record id="action_report_gpl_bordereau_envoi" model="ir.actions.report">
        <field name="name">Bordereau d'Envoi GPL</field>
        <field name="model">gpl.bordereau</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cpss_gpl_reports.report_gpl_bordereau_envoi</field>
        <field name="report_file">cpss_gpl_reports.report_gpl_bordereau_envoi</field>
        <field name="print_report_name">'Bordereau_Envoi_GPL_%s' % (object.name or datetime.datetime.now().strftime('%Y%m%d_%H%M'))</field>
        <field name="paperformat_id" ref="paperformat_gpl_bordereau"/>
        <field name="binding_model_id" ref="cpss_gpl_operations.model_gpl_bordereau"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Template du bordereau d'envoi -->
    <template id="report_gpl_bordereau_envoi">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="cpss_gpl_reports.gpl_external_layout">
                    <t t-call="cpss_gpl_reports.gpl_report_assets"/>
                    <div class="page">
                        <!-- En-tête du bordereau -->
                        <div class="text-center" style="margin: 30px 0; padding: 40px;">
                            <h2>BORDEREAU D'ENVOI</h2>
                            <p>
                                Référence: <strong t-field="doc.name"/><br/>
                                Date: <span t-field="doc.date_envoi" t-options="{'widget': 'date'}"/>
                            </p>
                        </div>

                        <!-- Destinataire -->
                        <div>
                            <p>
                                <strong>DESTINATAIRE: DIRECTION DES MINES - <span t-field="env.company.state_id.name"/></strong>
                            </p>
                        </div>

                        <!-- Liste des dossiers -->
                        <h4 style="margin-top: 30px;">LISTE DES DOSSIERS TRANSMIS:</h4>
                        <table class="gpl-bor-table">
                            <thead>
                                <tr>
                                    <th width="5%">N°</th>
                                    <th width="25%">Nom et Prénom</th>
                                    <th width="20%">Immatriculation</th>
                                    <th width="15%">N° Reservoir</th>
                                    <th width="15%">Date Contrôle</th>
                                    <th width="25%">Type Contrôle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="counter" t-value="1"/>
                                <tr t-foreach="doc.inspection_ids" t-as="inspection">
                                    <td class="text-center"><span t-esc="counter"/></td>
                                    <td><span t-field="inspection.client_id.name"/></td>
                                    <td><span t-field="inspection.vehicle_id.license_plate"/></td>
                                    <td><span t-if="inspection.vehicle_id.reservoir_lot_id" t-field="inspection.vehicle_id.reservoir_lot_id.name"/></td>
                                    <td><span t-field="inspection.date_start" t-options="{'widget': 'date'}"/></td>
                                    <td class="text-center">
                                        <span t-if="inspection.inspection_type == 'periodic'">Contrôle Triennal</span>
                                        <span t-elif="inspection.inspection_type == 'initial'">Contrôle Initial</span>
                                        <span t-else="">Volontaire</span>
                                    </td>
                                    <t t-set="counter" t-value="counter + 1"/>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="5" class="text-right">TOTAL DOSSIERS:</th>
                                    <th class="text-center"><span t-esc="len(doc.inspection_ids)"/></th>
                                </tr>
                            </tfoot>
                        </table>

                        <!-- Observations -->
                        <div style="margin-top: 30px; padding: 20px; border: 1px solid #ddd; min-height: 100px;">
                            <h4>OBSERVATIONS:</h4>
                            <p style="min-height: 60px;">
                                <t t-if="doc.notes">
                                    <span t-field="doc.notes"/>
                                </t>
                            </p>
                        </div>

                        <!-- Signatures -->
                        <div class="gpl-signatures">
                            <div class="row" style="margin-top: 50px;">
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="gpl-signature-box" style="margin: 0 auto;">
                                            <p><strong>L'Expéditeur</strong></p>
                                            <p>Nom et Signature</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="gpl-signature-box" style="margin: 0 auto;">
                                            <p><strong>Le Destinataire</strong></p>
                                            <p>Nom, Signature et Cachet</p>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Référence du bordereau -->
                            <div class="gpl-footer-ref">
                                <p>
                                    <strong>Référence bordereau:</strong>
                                    <span t-field="doc.name"/>
                                </p>
                                <p>
                                    Bordereau généré le <span t-esc="datetime.datetime.now().strftime('%d/%m/%Y à %H:%M')"/>
                                </p>
                                <p style="margin-top: 10px;">
                                    <em>Ce bordereau accompagne les dossiers de contrôle GPL transmis pour validation des cartes.</em>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
