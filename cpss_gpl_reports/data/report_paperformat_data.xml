<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Format papier pour les certificats GPL -->
        <record id="paperformat_gpl_certificate" model="report.paperformat">
            <field name="name">Format Certificat GPL</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <!-- Format papier pour les cartes GPL Face RECTO-->
        <record id="paperformat_gpl_card" model="report.paperformat">
            <field name="name">Carte GPL</field>
            <field name="default" eval="False"/>
            <field name="format">A5</field>
<!--            <field name="page_height">120</field>-->
<!--            <field name="page_width">148</field>-->
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
        </record>

        <!-- Format papier pour les cartes GPL Face VERSO-->
        <record id="paperformat_gpl_card_verso" model="report.paperformat">
            <field name="name">Carte GPL Verso</field>
            <field name="default" eval="False"/>
            <field name="format">A5</field>
<!--            <field name="page_width">148</field>-->
<!--            <field name="page_height">210</field>-->
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
        </record>

        <!-- Format papier pour les bordereaux -->
        <record id="paperformat_gpl_bordereau" model="report.paperformat">
            <field name="name">Format Bordereau GPL</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="True"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <!-- Format papier pour les rapports détaillés -->
        <record id="paperformat_gpl_report" model="report.paperformat">
            <field name="name">Format Rapport GPL</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="True"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>
    </data>
</odoo>
