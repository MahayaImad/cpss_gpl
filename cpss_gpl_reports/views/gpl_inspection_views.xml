<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_gpl_inspection_form_inherit" model="ir.ui.view">
        <field name="name">gpl.inspection.form.inherit.print</field>
        <field name="model">gpl.inspection</field>
        <field name="inherit_id" ref="cpss_gpl_operations.view_gpl_inspection_form"/>
        <field name="arch" type="xml">

            <!-- Target the statusbar field and insert the new button before it -->
            <xpath expr="//header/field[@name='state']" position="before">
                <button name="action_print_certificate"
                        string="Certificat D'etencheite"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'done'"/>
                <button name="action_print_card"
                        string="Carte Recto"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'done'"/>
                <button name="action_print_card_verso"
                        string="Carte Verso"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'done'"/>
            </xpath>

        </field>
    </record>


</odoo>
