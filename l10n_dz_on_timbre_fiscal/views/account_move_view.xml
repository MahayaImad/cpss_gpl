<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="account_invoice_form_ondz_timbre" model="ir.ui.view">
        <field name="name">account_invoice_form_ondz_timbre</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <field name="invoice_payment_term_id" position="after">
                <field name="payment_type" invisible="1"/>
            </field>

            <!-- Masquer complÃ¨tement les lignes de timbre fiscal -->
            <xpath expr="//field[@name='invoice_line_ids']/list" position="inside">
                <field name="isStamp" column_invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/list/control" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>

            <!-- Ajouter row_invisible sur chaque ligne pour masquer les lignes de timbre -->
            <xpath expr="//field[@name='invoice_line_ids']/list" position="attributes">
                <attribute name="row_invisible">[('isStamp', '=', True)]</attribute>
            </xpath>

       </field>
    </record>


     <record id="view_payment_term_form" model="ir.ui.view">
            <field name="name">account.payment.term.form</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='company_id' and @class='w-25']" position="after">
                    <field name="payment_type" class="w-25"/>
                </xpath>
            </field>
    </record>

  </data>
</odoo>
